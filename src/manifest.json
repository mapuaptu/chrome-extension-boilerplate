{
  "manifest_version": 2,
  "name": "extension-bigbet",
  "version": "1.0",
  "description": "extension-bigbet",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "page_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.ligastavok.ru/bets/live/*",
        "https://www.marathonbet.com/en/live/popular/*",
        "http://sports.williamhill.com/bet/ru/betlive/all/*"
      ],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "notifications",
    "contextMenus",
    "https://www.ligastavok.ru/bets/live/*",
    "https://www.marathonbet.com/en/live/popular/*",
    "http://sports.williamhill.com/bet/ru/betlive/all/*"
  ]
}
